---
import { IProjectDetails } from "@types";
const { projectDetail } = Astro.props as IProjectDetails;
const { title, thumbnail, liveUrl, githubUrl, youtubeUrl, tecnologias, description } = projectDetail;
import "../../styles/custom-styles.css";
---

<article class="w-full max-h-[35rem] overflow-hidden relative group">
  <h2 class="card-expand-title">{title}</h2>

  <div class="grid md:grid-cols-2 grid-cols-1 gap-4 mb-16 mt-8">
    <img
      src={thumbnail}
      class="w-full h-auto scale-100"
      loading="lazy"
      width="50%"
      height="100%"
      alt="featureImage"
    />
    <div class="p-2" style="display: flex; flex-direction: column; justify-content: space-between;">
      <p class="text-xl text-white">{description}</p>
      <div class="mt-2 grid grid-cols-3 gap-4">
        {
          githubUrl && (
            <a
              href={githubUrl}
              class="footer-icons"
              aria-label="Social Media"
              target="_blank"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="feather feather-github"
              >
                <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
              </svg>
            </a>
          )
        }

        {
          liveUrl && (
            <a
              href={liveUrl}
              class="footer-icons"
              aria-label="Social Media"
              target="_blank"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="feather feather-link-2"
              >
                <path d="M15 7h3a5 5 0 0 1 5 5 5 5 0 0 1-5 5h-3m-6 0H6a5 5 0 0 1-5-5 5 5 0 0 1 5-5h3" />
                <line x1="8" y1="12" x2="16" y2="12" />
              </svg>
            </a>
          )
        }

        {
          youtubeUrl && (
            <a
              href={youtubeUrl}
              class="footer-icons"
              aria-label="Social Media"
              target="_blank"
            >
            <svg xmlns="http://www.w3.org/2000/svg" height="20" width="20" viewBox="-35.20005 -41.33325 305.0671 247.9995"><path d="M93.333 117.559V47.775l61.334 34.893zm136.43-91.742c-2.699-10.162-10.651-18.165-20.747-20.881C190.716 0 117.333 0 117.333 0S43.951 0 25.651 4.936C15.555 7.652 7.603 15.655 4.904 25.817 0 44.236 0 82.667 0 82.667s0 38.429 4.904 56.849c2.699 10.163 10.65 18.165 20.747 20.883 18.3 4.934 91.682 4.934 91.682 4.934s73.383 0 91.683-4.934c10.096-2.718 18.048-10.72 20.747-20.883 4.904-18.42 4.904-56.85 4.904-56.85s0-38.43-4.904-56.849" fill="#fff"/></svg>
            </a>
          )
        }
      </div>
      <div class="proyecto-tecnologia mt-2">
            <span> Tecnolog√≠as </span>  
            {
              tecnologias.map( (tec) => (
                <div class="proyecto-tecnologia-logo">
                  <img src={tec.logo} alt={tec.name}>
                  <h5> {tec.name} </h5>
                </div>
               
              ))
            }
      </div>
    </div>
  </div>
</article>
